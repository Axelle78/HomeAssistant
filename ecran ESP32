lvgl:
  buffer_size: 25%
  on_idle:
    - timeout: 10s
      then:
        - logger.log: idle timeout
        - if:
            condition:
              lvgl.is_idle:
                timeout: 5s
            then:
              - logger.log: LVGL is idle
    - timeout: 15s
      then:
        - logger.log: idle 15s timeout
        - lvgl.pause:
        - light.turn_off:
            id: display_backlight
            transition_length: 5s    

